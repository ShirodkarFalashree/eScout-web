{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "nodenext",
      "lib": ["es6", "dom"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true
    },
    "ts-node": {
      "esm": true
    }
  }
  